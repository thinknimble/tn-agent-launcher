    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/server/manage.py"
        },
        {
          "name": "Python: Attach to Docker",
          "type": "debugpy",
          "request": "attach",
          "connect": {
            "host": "localhost",
            "port": 5678
          },
          "pathMappings": [
            {
              "localRoot": "${workspaceFolder}",
              "remoteRoot": "/app"
            }
          ],
          "justMyCode": true
        },
        {
            "name": "Python Debugger: Django process_tasks",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "process_tasks"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/server/manage.py"
        },

    ]
}